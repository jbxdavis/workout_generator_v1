<!-- Validation failure messages -->
<% if @muscle_group.present? %>
  <% if @muscle_group.errors.any? %>
    <% @muscle_group.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new muscle group
</h1>


<hr>

<!-- Form muscle_group start -->
<form action="/create_muscle_group" method="post">
<!-- Form muscle_group end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @muscle_group.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Create muscle group
  </button>
</form>

<hr>

<a href="/muscle_groups">
  Go back
</a>
