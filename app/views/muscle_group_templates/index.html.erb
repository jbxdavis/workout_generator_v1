<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All muscle groups
    </h1>

    <a href="/muscle_groups/new" class="btn btn-block btn-outline-secondary">
      Add a new muscle group
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "muscle_group_templates/muscle_groups_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @muscle_groups.each do |muscle_group| %>
      <tr>
        <td>
          <%= muscle_group.id %>
        </td>

        <td>
          <%= muscle_group.name %>
        </td>

        <td>
          <%= time_ago_in_words(muscle_group.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(muscle_group.updated_at) %> ago
        </td>

        <td>
          <a href="/muscle_groups/<%= muscle_group.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @muscle_groups, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
