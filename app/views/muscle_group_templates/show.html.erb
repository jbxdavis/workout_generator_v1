<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Muscle group #<%= @muscle_group.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/muscle_groups" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link muscle_group start -->
      <div class="col">
        <a href="/muscle_groups/<%= @muscle_group.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit muscle group
        </a>
      </div>
      <!-- Edit link muscle_group end -->

      <!-- Delete link muscle_group start -->
      <div class="col">
        <a href="/delete_muscle_group/<%= @muscle_group.id %>" class="btn btn-block btn-outline-secondary">
          Delete muscle group
        </a>
      </div>
      <!-- Delete link muscle_group end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @muscle_group.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@muscle_group.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@muscle_group.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "muscle_group_templates/muscle_group_mg_targets" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "muscle_group_templates/muscle_group_lifts_targeting" %>
  </div>
</div>
<!-- Show Page Customization end -->
