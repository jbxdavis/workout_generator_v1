<h1>
  Edit template #<%= @template.id %>
</h1>

<hr>

<!-- Form template start -->
<form action="/update_template/<%= @template.id %>" method="post">
<!-- Form template end -->

  <!-- Label and input for sets start -->
  <div class="form-group">
    <label for="sets">
      Sets
    </label>

    <!-- Input for sets start -->
    <input type="text" id="sets" name="sets" class="form-control" value="<%= @template.sets %>">
    <!-- Input for sets end -->
  </div>
  <!-- Label and input for sets end -->

  <!-- Label and input for reps start -->
  <div class="form-group">
    <label for="reps">
      Reps
    </label>

    <!-- Input for reps start -->
    <input type="text" id="reps" name="reps" class="form-control" value="<%= @template.reps %>">
    <!-- Input for reps end -->
  </div>
  <!-- Label and input for reps end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @template.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Update template
  </button>
</form>

<hr>

<a href="/templates">
  Go back
</a>
