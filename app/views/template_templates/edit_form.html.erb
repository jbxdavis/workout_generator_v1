<h1>
  Edit template #<%= @template.id %>
</h1>

<hr>

<form action="/update_template/<%= @template.id %>" method="post">

  <div class="form-group">
    <label for="sets">
      Sets
    </label>

    <input type="text" id="sets" name="sets" class="form-control" value="<%= @template.sets %>">
  </div>

  <div class="form-group">
    <label for="reps">
      Reps
    </label>

    <input type="text" id="reps" name="reps" class="form-control" value="<%= @template.reps %>">
  </div>

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @template.name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update template
  </button>
</form>

<hr>

<a href="/templates">
  Go back
</a>
