<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All equipment requirements
    </h1>

    <a href="/equipment_requirements/new" class="btn btn-block btn-outline-secondary">
      Add a new equipment requirement
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "equipment_requirement_templates/equipment_requirements_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Lift
        </th>

        <th>
          Equipment
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @equipment_requirements.each do |equipment_requirement| %>
      <tr>
        <td>
          <%= equipment_requirement.id %>
        </td>

        <td>
          <% if equipment_requirement.lift.present? %>
            <a href="/lifts/<%= equipment_requirement.lift.id %>">
              <%= equipment_requirement.lift.cooldown_hours %>
            </a>
          <% end %>
        </td>

        <td>
          <% if equipment_requirement.equipment.present? %>
            <a href="/equipment/<%= equipment_requirement.equipment.id %>">
              <%= equipment_requirement.equipment.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(equipment_requirement.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(equipment_requirement.updated_at) %> ago
        </td>

        <td>
          <a href="/equipment_requirements/<%= equipment_requirement.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @equipment_requirements, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
