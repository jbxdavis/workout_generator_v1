<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All equipment requirements
    </h1>

    <a href="/equipment_requirements/new" class="btn btn-block btn-outline-secondary">
      Add a new equipment requirement
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Lift
        </th>

        <th>
          Equipment
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @equipment_requirements.each do |equipment_requirement| %>
      <tr>
        <!-- Display equipment_requirement.id start -->
        <td>
          <%= equipment_requirement.id %>
        </td>
        <!-- Display equipment_requirement.id end -->

        <!-- Display equipment_requirement.lift_id start -->
        <td>
          <%= equipment_requirement.lift.cooldown_hours %>
        </td>
        <!-- Display equipment_requirement.lift_id end -->

        <!-- Display equipment_requirement.equipment_id start -->
        <td>
          <%= equipment_requirement.equipment_id %>
        </td>
        <!-- Display equipment_requirement.equipment_id end -->

        <!-- Display equipment_requirement.created_at start -->
        <td>
          <%= time_ago_in_words(equipment_requirement.created_at) %> ago
        </td>
        <!-- Display equipment_requirement.created_at end -->

        <!-- Display equipment_requirement.updated_at start -->
        <td>
          <%= time_ago_in_words(equipment_requirement.updated_at) %> ago
        </td>
        <!-- Display equipment_requirement.updated_at end -->

        <td>
          <a href="/equipment_requirements/<%= equipment_requirement.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
