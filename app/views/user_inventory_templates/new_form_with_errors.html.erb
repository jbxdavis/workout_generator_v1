<!-- Validation failure messages -->
<% if @user_inventory.present? %>
  <% if @user_inventory.errors.any? %>
    <% @user_inventory.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new user inventory
</h1>


<hr>

<!-- Form user_inventory start -->
<form action="/create_user_inventory" method="post">
<!-- Form user_inventory end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @user_inventory.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for equipment_id start -->
  <div class="form-group">
    <label for="equipment_id">
      Equipment
    </label>

    <!-- Input for equipment_id start -->
    <%= select_tag(:equipment_id, options_from_collection_for_select(Equipment.all, :id, :name, @user_inventory.equipment_id), :class => "form-control") %>
    <!-- Input for equipment_id end -->
  </div>
  <!-- Label and input for equipment_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create user inventory
  </button>
</form>

<hr>

<a href="/user_inventories">
  Go back
</a>
