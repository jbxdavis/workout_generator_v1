<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All user inventories
    </h1>

    <a href="/user_inventories/new" class="btn btn-block btn-outline-secondary">
      Add a new user inventory
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "user_inventory_templates/user_inventories_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Equipment
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @user_inventories.each do |user_inventory| %>
      <tr>
        <!-- Display user_inventory.id start -->
        <td>
          <%= user_inventory.id %>
        </td>
        <!-- Display user_inventory.id end -->

        <!-- Display user_inventory.user_id start -->
        <td>
          <% if user_inventory.user.present? %>
            <a href="/users/<%= user_inventory.user.id %>">
              <%= user_inventory.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display user_inventory.user_id end -->

        <!-- Display user_inventory.equipment_id start -->
        <td>
          <% if user_inventory.equipment.present? %>
            <a href="/equipment/<%= user_inventory.equipment.id %>">
              <%= user_inventory.equipment.name %>
            </a>
          <% end %>
        </td>
        <!-- Display user_inventory.equipment_id end -->

        <!-- Display user_inventory.created_at start -->
        <td>
          <%= time_ago_in_words(user_inventory.created_at) %> ago
        </td>
        <!-- Display user_inventory.created_at end -->

        <!-- Display user_inventory.updated_at start -->
        <td>
          <%= time_ago_in_words(user_inventory.updated_at) %> ago
        </td>
        <!-- Display user_inventory.updated_at end -->

        <td>
          <a href="/user_inventories/<%= user_inventory.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @user_inventories, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
