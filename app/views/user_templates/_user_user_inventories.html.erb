<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    User Inventories

    <a data-toggle="collapse" href="#user_user_inventories_new_form">
      Add user inventory
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.user_inventories.each do |user_inventory| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/user_inventories/<%= user_inventory.id %>">
          <%= user_inventory.user_id %>
        </a>
        <!-- Show link end -->

      </li>
    <% end %>

  </ul>
</div>
