<% if @mg_target.errors.any? %>
  <% @mg_target.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit mg target #<%= @mg_target.id %>
</h1>

<hr>

<form action="/update_mg_target/<%= @mg_target.id %>" method="post">

  <div class="form-group">
    <label for="mg_id">
      Mg
    </label>

    <%= select_tag(:mg_id, options_from_collection_for_select(MuscleGroup.all, :id, :name, @mg_target.mg_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="lift_id">
      Lift
    </label>

    <%= select_tag(:lift_id, options_from_collection_for_select(Lift.all, :id, :cooldown_hours, @mg_target.lift_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update mg target
  </button>
</form>

<hr>

<a href="/mg_targets">
  Go back
</a>
