<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Mg
        </th>

        <th>
          Lift
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @mg_targets.each do |mg_target| %>
      <tr>
        <!-- Display mg_target.id start -->
        <td>
          <%= mg_target.id %>
        </td>
        <!-- Display mg_target.id end -->

        <!-- Display mg_target.mg_id start -->
        <td>
          <%= mg_target.mg.name %>
        </td>
        <!-- Display mg_target.mg_id end -->

        <!-- Display mg_target.lift_id start -->
        <td>
          <%= mg_target.lift.cooldown_hours %>
        </td>
        <!-- Display mg_target.lift_id end -->

        <!-- Display mg_target.created_at start -->
        <td>
          <%= time_ago_in_words(mg_target.created_at) %> ago
        </td>
        <!-- Display mg_target.created_at end -->

        <!-- Display mg_target.updated_at start -->
        <td>
          <%= time_ago_in_words(mg_target.updated_at) %> ago
        </td>
        <!-- Display mg_target.updated_at end -->

        <td>
          <a href="/mg_targets/<%= mg_target.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
