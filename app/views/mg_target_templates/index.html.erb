<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All mg targets
    </h1>

    <a href="/mg_targets/new" class="btn btn-block btn-outline-secondary">
      Add a new mg target
    </a>
  </div>
</div>

<!-- Ransack Code start -->

