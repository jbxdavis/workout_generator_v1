<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All equipment
    </h1>

    <a href="/equipment/new" class="btn btn-block btn-outline-secondary">
      Add a new equipment
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @equipment.each do |equipment| %>
      <tr>
        <!-- Display equipment.id start -->
        <td>
          <%= equipment.id %>
        </td>
        <!-- Display equipment.id end -->

        <!-- Display equipment.name start -->
        <td>
          <%= equipment.name %>
        </td>
        <!-- Display equipment.name end -->

        <!-- Display equipment.created_at start -->
        <td>
          <%= time_ago_in_words(equipment.created_at) %> ago
        </td>
        <!-- Display equipment.created_at end -->

        <!-- Display equipment.updated_at start -->
        <td>
          <%= time_ago_in_words(equipment.updated_at) %> ago
        </td>
        <!-- Display equipment.updated_at end -->

        <td>
          <a href="/equipment/<%= equipment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @equipment, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
