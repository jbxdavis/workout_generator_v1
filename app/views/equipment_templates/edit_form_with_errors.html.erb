<% if @equipment.errors.any? %>
  <% @equipment.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit equipment #<%= @equipment.id %>
</h1>

<hr>

<form action="/update_equipment/<%= @equipment.id %>" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @equipment.name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update equipment
  </button>
</form>

<hr>

<a href="/equipment">
  Go back
</a>
