<form action="/create_user_inventory_from_equipment" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @user_inventory.user_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="equipment_id" value="<%= @equipment.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create user inventory
  </button>
</form>
