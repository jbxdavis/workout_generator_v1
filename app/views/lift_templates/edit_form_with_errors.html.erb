<% if @lift.errors.any? %>
  <% @lift.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit lift #<%= @lift.id %>
</h1>

<hr>

<form action="/update_lift/<%= @lift.id %>" method="post">

  <div class="form-group">
    <label for="cooldown_hours">
      Cooldown hours
    </label>

    <input type="text" id="cooldown_hours" name="cooldown_hours" class="form-control" value="<%= @lift.cooldown_hours %>">
  </div>

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @lift.name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update lift
  </button>
</form>

<hr>

<a href="/lifts">
  Go back
</a>
