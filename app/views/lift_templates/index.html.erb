<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All lifts
    </h1>

    <a href="/lifts/new" class="btn btn-block btn-outline-secondary">
      Add a new lift
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Cooldown hours
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @lifts.each do |lift| %>
      <tr>
        <!-- Display lift.id start -->
        <td>
          <%= lift.id %>
        </td>
        <!-- Display lift.id end -->

        <!-- Display lift.cooldown_hours start -->
        <td>
          <%= lift.cooldown_hours %>
        </td>
        <!-- Display lift.cooldown_hours end -->

        <!-- Display lift.name start -->
        <td>
          <%= lift.name %>
        </td>
        <!-- Display lift.name end -->

        <!-- Display lift.created_at start -->
        <td>
          <%= time_ago_in_words(lift.created_at) %> ago
        </td>
        <!-- Display lift.created_at end -->

        <!-- Display lift.updated_at start -->
        <td>
          <%= time_ago_in_words(lift.updated_at) %> ago
        </td>
        <!-- Display lift.updated_at end -->

        <td>
          <a href="/lifts/<%= lift.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @lifts, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
