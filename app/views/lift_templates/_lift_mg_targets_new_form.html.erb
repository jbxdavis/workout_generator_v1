<form action="/create_mg_target_from_lift" method="post">

  <div class="form-group">
    <label for="mg_id">
      Mg
    </label>

    <%= select_tag(:mg_id, options_from_collection_for_select(MuscleGroup.all, :id, :name, @mg_target.mg_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="lift_id" value="<%= @lift.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create mg target
  </button>
</form>
