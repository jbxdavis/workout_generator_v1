<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Mg Targets

    <a data-toggle="collapse" href="#lift_mg_targets_new_form">
      Add mg target
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @lift.mg_targets.each do |mg_target| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/mg_targets/<%= mg_target.id %>">
          <%= mg_target.mg_id %>
        </a>

        <a href="/delete_mg_target_from_lift/<%= mg_target.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="lift_mg_targets_new_form">
        <%= render partial: "lift_templates/lift_mg_targets_new_form" %>
      </div>
    </div>

  </ul>
</div>
