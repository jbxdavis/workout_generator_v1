<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Equipment Requirements

    <a data-toggle="collapse" href="#lift_equipment_requirements_new_form">
      Add equipment requirement
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @lift.equipment_requirements.each do |equipment_requirement| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/equipment_requirements/<%= equipment_requirement.id %>">
          <%= equipment_requirement.lift_id %>
        </a>

        <a href="/delete_equipment_requirement_from_lift/<%= equipment_requirement.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="lift_equipment_requirements_new_form">
        <%= render partial: "lift_templates/lift_equipment_requirements_new_form" %>
      </div>
    </div>

  </ul>
</div>
